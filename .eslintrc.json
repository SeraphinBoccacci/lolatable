{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "plugin:react/recommended",
    "eslint:recommended",
    "google",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "simple-import-sort", "prettier"],
  "rules": {
    "simple-import-sort/sort": "error",
    "sort-imports": "off",
    "import/order": "off",
    "prettier/prettier": ["error"],
    "max-len": 0,
    "semi": [2, "always"],
    "quotes": ["error", "double"],
    "no-console": 2,
    "no-unused-vars": 2,
    "object-curly-spacing": [2, "always"],
    "require-jsdoc": 0
  }
}
